<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fall18project.gamecentre">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".sliding_tiles.GameActivity" />
        <activity android:name=".game_management.ScoreboardActivity" />
        <activity android:name=".sliding_tiles.GameSetupActivity" />
        <activity android:name=".user_management.LoginActivity" />
        <activity
            android:name=".user_management.NewUserActivity"
            android:noHistory="true" />
        <activity
            android:name=".IntroductionActivity"
            android:noHistory="true" />
        <activity android:name=".ChooseGameActivity" />
        <activity android:name=".minesweeper.GameActivity" />
        <activity android:name=".reactorcontrol.GameActivity" />
        <activity android:name=".user_management.GameOverActivity" />
    </application>

</manifest>